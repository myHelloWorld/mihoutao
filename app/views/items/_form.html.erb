<%= form_for(@item) do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description %>
    <br />
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :weight %>
    <%= f.text_field :weight %> 
  </div>
  <%= f.submit %>
<% end %>
